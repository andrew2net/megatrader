<h4  class="color-green" style="font-weight: bold; padding-top: 40px;">ОСТАЛИСЬ ВОПРОСЫ?</h4>
<%= form_tag question_send_path, class: 'question-form', style: 'padding-bottom: 30px;' do %>
    <div><%= text_field_tag :name, nil, placeholder: 'Имя' %></div>
    <div><%= text_field_tag :email, nil, placeholder: 'Email' %></div>
    <div><%= text_area_tag :question, nil, rows: 5, cols: 30, placeholder: 'Вопрос' %></div>
    <div><%= submit_tag 'Спросить' %></div>
<% end %>
